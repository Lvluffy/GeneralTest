<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/btn_view_attribute"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/res_bg_normal_radius_ture_stroke_true_white_selector"
        android:gravity="center"
        android:text="改变View属性实现过渡动画" />

    <ImageView
        android:id="@+id/img_view_attribute"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:src="@drawable/icon_car" />

    <TextView
        android:id="@+id/btn_xml"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/res_bg_normal_radius_ture_stroke_true_white_selector"
        android:gravity="center"
        android:text="改变xml来实现过渡动画" />

    <include layout="@layout/layout_transition_start" />

    <include layout="@layout/layout_transition_end" />

</LinearLayout>