<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/btn_send_default_notification"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/res_bg_normal_radius_ture_stroke_true_white_selector"
        android:gravity="center"
        android:text="发送默认通知" />

    <TextView
        android:id="@+id/btn_send_custom_notification"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/res_bg_normal_radius_ture_stroke_true_white_selector"
        android:gravity="center"
        android:text="发送自定义通知" />

    <TextView
        android:id="@+id/btn_send_large_view_notification"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/res_bg_normal_radius_ture_stroke_true_white_selector"
        android:gravity="center"
        android:text="发送大视图通知" />

    <TextView
        android:id="@+id/btn_send_large_img_notification"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/res_bg_normal_radius_ture_stroke_true_white_selector"
        android:gravity="center"
        android:text="发送大图片通知" />

</LinearLayout>